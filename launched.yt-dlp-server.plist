<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>launched.yt-dlp-server</string>

    <key>ProgramArguments</key>
    <array>
        <string>/Users/$USER/.cargo/bin/yt-dlp-server</string>
        <string>--listen</string>
        <string>0.0.0.0:8989</string>
        <string>--database-folder</string>
        <string>/Users/$USER/Movies/yt-dlp-server</string>
        <string>--subscriptions-download-folder</string>
        <string>/Users/$USER/Movies/yt-dlp-server/downloads</string>
        <string>--direct-download-folder</string>
        <string>/Users/$USER/Movies/yt-dlp-server/downloads</string>
    </array>

    <key>EnvironmentVariables</key>
    <dict>
           <key>RUST_LOG</key>
           <string>debug</string>
           <key>PATH</key>
           <!-- python3, yt-dlp, ffmpeg and,; that's it -->
           <string>/usr/bin:/usr/local/bin:/Users/$USER/.nix-profile/bin</string>
    </dict>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/Users/$USER/Library/Logs/yt-dlp-server/yt-dlp-server.log</string>
    <key>StandardErrorPath</key>
    <string>/Users/$USER/Library/Logs/yt-dlp-server/yt-dlp-server.log</string>
</dict>
</plist>